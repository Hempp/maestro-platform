rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ════════════════════════════════════════════════════════════════════════════
    // HELPER FUNCTIONS
    // ════════════════════════════════════════════════════════════════════════════

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user owns the document (by userId parameter)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check if user owns the document (by resource data field)
    function isResourceOwner() {
      return isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Check if incoming request data has matching userId
    function isRequestOwner() {
      return isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Get current user's document
    function getUserDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Get current user's role
    function getUserRole() {
      return getUserDoc().data.role;
    }

    // Check if user has admin role
    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserRole() == 'admin';
    }

    // Check if user has teacher role (includes instructors)
    function isTeacher() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserRole() in ['teacher', 'instructor'];
    }

    // Check if user is admin or teacher
    function isAdminOrTeacher() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserRole() in ['admin', 'teacher', 'instructor'];
    }

    // Check if user has specific tier subscription
    function hasTier(tiers) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserDoc().data.tier in tiers;
    }

    // Validate required fields exist in request data
    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // Check if the current user is the teacher of a specific course
    function isCourseTeacher(courseId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/liveCourses/$(courseId)) &&
        get(/databases/$(database)/documents/liveCourses/$(courseId)).data.teacherId == request.auth.uid;
    }

    // Check if user is enrolled in a course
    function isEnrolledInCourse(courseId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/courseEnrollments/$(request.auth.uid + '_' + courseId));
    }

    // ════════════════════════════════════════════════════════════════════════════
    // USER COLLECTIONS
    // ════════════════════════════════════════════════════════════════════════════

    // Users - main profile with role field (admin, teacher, learner)
    match /users/{userId} {
      // Users can read their own data; admins/teachers can read all
      allow read: if isOwner(userId) || isAdminOrTeacher();
      // Users can create their own profile
      allow create: if isOwner(userId) &&
        hasRequiredFields(['email']) &&
        (!('role' in request.resource.data) || request.resource.data.role == 'learner');
      // Users can update their own profile; admins can update any
      // Users cannot change their own role (prevent privilege escalation)
      allow update: if (isOwner(userId) && !('role' in request.resource.data)) ||
        (isOwner(userId) && request.resource.data.role == resource.data.role) ||
        isAdmin();
      // Never allow client-side deletion (use Admin SDK for account cleanup)
      allow delete: if false;
    }

    // Learner profiles - learning progress and state
    match /learnerProfiles/{docId} {
      allow read: if isResourceOwner() || isAdminOrTeacher();
      allow create: if isRequestOwner();
      allow update: if isResourceOwner();
      allow delete: if false;
    }

    // User settings - preferences and notification settings
    match /userSettings/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // ════════════════════════════════════════════════════════════════════════════
    // LEARNING PROGRESS COLLECTIONS
    // ════════════════════════════════════════════════════════════════════════════

    // AKU Progress - module completion status
    match /akuProgress/{progressId} {
      allow read: if isResourceOwner() || isAdminOrTeacher();
      allow create: if isRequestOwner();
      allow update: if isResourceOwner();
      allow delete: if false;
    }

    // Chat sessions - AI tutor conversations
    match /chatSessions/{sessionId} {
      allow read: if isResourceOwner();
      allow create: if isRequestOwner();
      allow update: if isResourceOwner();
      allow delete: if false;
    }

    // Tutor conversations - detailed conversation history
    match /tutorConversations/{convId} {
      allow read: if isResourceOwner();
      allow create: if isRequestOwner();
      allow update: if isResourceOwner();
      allow delete: if false;
    }

    // User milestones - achievement tracking
    match /userMilestones/{milestoneId} {
      allow read: if isResourceOwner() || isAdmin();
      allow create: if isRequestOwner();
      allow update: if isResourceOwner() || isAdmin();
      allow delete: if false;
    }

    // Sandbox sessions - code sandbox state
    match /sandboxSessions/{sessionId} {
      allow read: if isResourceOwner();
      allow create: if isRequestOwner();
      allow update: if isResourceOwner();
      allow delete: if isResourceOwner();
    }

    // Terminal history - command history
    match /terminalHistory/{historyId} {
      allow read: if isResourceOwner();
      allow create: if isRequestOwner();
      allow delete: if false;
    }

    // ════════════════════════════════════════════════════════════════════════════
    // CERTIFICATES & CREDENTIALS
    // ════════════════════════════════════════════════════════════════════════════

    // Certificates - PUBLIC read for employer verification
    match /certificates/{certId} {
      // Anyone can read certificates (verification by employers/third parties)
      allow read: if true;
      // Only admins create certificates (via Admin SDK after certification approval)
      allow create: if false;
      // Certificates are immutable once issued
      allow update: if false;
      allow delete: if false;
    }

    // Certification submissions - learner exam/project submissions
    match /certificationSubmissions/{submissionId} {
      // Owner can read their submissions; admins can read all for review
      allow read: if isResourceOwner() || isAdmin();
      // Learners can create submissions
      allow create: if isRequestOwner() &&
        hasRequiredFields(['userId', 'moduleId', 'status']);
      // Owner can update while in draft/submitted state; admins can grade
      allow update: if (isResourceOwner() && resource.data.status in ['draft', 'submitted']) ||
        isAdmin();
      allow delete: if false;
    }

    // Claimable credentials - blockchain credential claims
    match /claimableCredentials/{credId} {
      allow read: if isResourceOwner();
      // Only Admin SDK creates these (after certification)
      allow create: if false;
      // Owner can claim/update status
      allow update: if isResourceOwner();
      allow delete: if false;
    }

    // ════════════════════════════════════════════════════════════════════════════
    // SUBSCRIPTIONS & PAYMENTS (Stripe Integration)
    // ════════════════════════════════════════════════════════════════════════════

    // Subscriptions - Stripe subscription data (read-only for users)
    match /subscriptions/{subId} {
      // Owner can read their subscription; admins can read all
      allow read: if isResourceOwner() || isAdmin();
      // ONLY Admin SDK (webhooks) can write - prevents manipulation
      allow write: if false;
    }

    // Subscription history - payment history
    match /subscriptionHistory/{historyId} {
      allow read: if isResourceOwner() || isAdmin();
      // Only Admin SDK writes (from webhooks)
      allow write: if false;
    }

    // Payments - individual payment records
    match /payments/{paymentId} {
      allow read: if isResourceOwner() || isAdmin();
      // Only Admin SDK writes (from webhooks)
      allow write: if false;
    }

    // Usage tracking - API usage and quota tracking
    match /usageTracking/{usageId} {
      allow read: if isResourceOwner() || isAdmin();
      // Only Admin SDK/Cloud Functions write
      allow write: if false;
    }

    // ════════════════════════════════════════════════════════════════════════════
    // LIVE COURSES & SESSIONS (Teacher Management)
    // ════════════════════════════════════════════════════════════════════════════

    // Live courses - teacher-managed courses
    match /liveCourses/{courseId} {
      // Public read for course catalog
      allow read: if true;
      // Teachers can create courses (they become the teacherId)
      allow create: if isAdminOrTeacher() &&
        request.resource.data.teacherId == request.auth.uid;
      // Only course teacher or admin can update
      allow update: if isAdmin() ||
        (isTeacher() && resource.data.teacherId == request.auth.uid);
      // Only admin can delete courses
      allow delete: if isAdmin();
    }

    // Live sessions - individual class sessions linked to courses
    match /liveSessions/{sessionId} {
      // Public read for session schedule
      allow read: if true;
      // Teachers can create sessions for their own courses
      allow create: if isAdminOrTeacher() &&
        isCourseTeacher(request.resource.data.courseId);
      // Course teacher or admin can update
      allow update: if isAdmin() ||
        (isTeacher() && isCourseTeacher(resource.data.courseId));
      // Admin can delete; teacher can delete their own course sessions
      allow delete: if isAdmin() ||
        (isTeacher() && isCourseTeacher(resource.data.courseId));
    }

    // Course enrollments - learner course registrations
    match /courseEnrollments/{enrollId} {
      // Owner can read their enrollments; teachers can read for their courses; admin reads all
      allow read: if isResourceOwner() ||
        isCourseTeacher(resource.data.courseId) ||
        isAdmin();
      // Learners can enroll themselves
      allow create: if isRequestOwner();
      // Owner can update enrollment status; teacher/admin can also update
      allow update: if isResourceOwner() ||
        isCourseTeacher(resource.data.courseId) ||
        isAdmin();
      // No deletion - use status field for cancellation
      allow delete: if false;
    }

    // Session enrollments - individual session registrations
    match /sessionEnrollments/{enrollId} {
      // Owner can read; course teacher can read for attendance
      allow read: if (isAuthenticated() && resource.data.studentId == request.auth.uid) ||
        isAdmin();
      // Learners can enroll themselves
      allow create: if isAuthenticated() &&
        request.resource.data.studentId == request.auth.uid;
      // Teacher/admin can update attendance status
      allow update: if isAdmin();
      allow delete: if false;
    }

    // ════════════════════════════════════════════════════════════════════════════
    // COURSES & CURRICULUM (Static Content)
    // ════════════════════════════════════════════════════════════════════════════

    // Courses - static curriculum courses
    match /courses/{courseId} {
      // Public read for course catalog
      allow read: if true;
      // Only admin can modify curriculum
      allow write: if isAdmin();

      // Modules subcollection
      match /modules/{moduleId} {
        allow read: if true;
        allow write: if isAdmin();

        // Lessons subcollection
        match /lessons/{lessonId} {
          allow read: if true;
          allow write: if isAdmin();
        }
      }
    }

    // General enrollments (for static courses)
    match /enrollments/{enrollmentId} {
      allow read: if isResourceOwner() || isAdmin();
      allow create: if isRequestOwner();
      allow update: if isResourceOwner();
      allow delete: if false;
    }

    // ════════════════════════════════════════════════════════════════════════════
    // NOTIFICATIONS
    // ════════════════════════════════════════════════════════════════════════════

    match /notifications/{notificationId} {
      // Users read their own notifications
      allow read: if isResourceOwner();
      // Only Admin SDK/Cloud Functions create notifications
      allow create: if false;
      // Users can mark as read/dismiss
      allow update: if isResourceOwner();
      // Users can delete their notifications
      allow delete: if isResourceOwner();
    }

    // ════════════════════════════════════════════════════════════════════════════
    // ADMIN-ONLY COLLECTIONS
    // ════════════════════════════════════════════════════════════════════════════

    // Retention emails - email tracking (admin/system only)
    match /retentionEmails/{docId} {
      // Only admin can read retention email logs
      allow read: if isAdmin();
      // Only Admin SDK (cron jobs) can write
      allow write: if false;
    }

    // Platform settings - global configuration
    match /platformSettings/{settingId} {
      // All authenticated users can read (for feature flags, etc.)
      allow read: if isAuthenticated();
      // Only admin can modify
      allow write: if isAdmin();
    }

    // Webhooks configuration
    match /webhooks/{webhookId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Analytics - aggregated metrics
    match /analytics/{document=**} {
      allow read: if isAdmin();
      // Only Cloud Functions write analytics
      allow write: if false;
    }

    // Daily metrics - per-user daily stats
    match /dailyMetrics/{date}/users/{userId} {
      // Users can read their own metrics; admin reads all
      allow read: if isOwner(userId) || isAdmin();
      // Only Cloud Functions write
      allow write: if false;
    }

    // Admin audit logs
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // ════════════════════════════════════════════════════════════════════════════
    // CATCH-ALL DENY RULE
    // Any collection not explicitly defined above is denied by default
    // ════════════════════════════════════════════════════════════════════════════

    // Uncomment below to explicitly deny all other paths (recommended for production)
    // match /{document=**} {
    //   allow read, write: if false;
    // }
  }
}
